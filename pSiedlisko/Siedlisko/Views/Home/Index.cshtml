@model Siedlisko.ViewModels.IndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="body">
    <div class="row">
        <div class="col-md-2 h3">
            @using (Html.BeginForm("Index", "Home", new Siedlisko.ViewModels.IndexViewModel() { Date = Model.Date.AddMonths(-1) }))
            {
            <input type="submit" class="btn btn-success" value="< Poprzedni miesiąc" />
            }
        </div>
        <div class="col-md-8 h3 text-center text-uppercase">
            @if (Model.Date != null)
            {

            <span>@Model.GetMonthsString() @Model.Date.Year.ToString()</span>
            }
            else
            {
            @DateTime.Now.ToString("yyy=MM-dd");
            }
        </div>
        <div class="col-md-2 h3">
            @using (Html.BeginForm("Index", "Home", new Siedlisko.ViewModels.IndexViewModel() { Date = Model.Date.AddMonths(1) }))
            {
            <input type="submit" class="btn btn-success" value="Następny miesiąc >" />
            }
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="row">

                <div class="col-md-4 col-md-offset-4" id="Poniedzialek">
                    @foreach (var date in Model.GetAllDaysOfWeek(DayOfWeek.Monday))
                    {
                        @if (date.IsRegularMonthDay)
                        {
                            <div class="CalendarDay @date.ReservationState.ToString()">@date.Date.Day</div>
                        }
                        else
                        {
                            <div class="CalendarDay CalendarFillerDay @date.ReservationState.ToString()">@date.Date.Day</div>
                        }
                    }
                </div>
