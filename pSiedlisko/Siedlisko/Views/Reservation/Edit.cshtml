@model Siedlisko.ViewModels.EditViewModel


@if (Model != null && !string.IsNullOrWhiteSpace(Model.OperationResultsDescription))
{
    <div class="row text-center alert @(@Model.OperationSucces ? "alert-success" : "alert-danger")">
        @Model.OperationResultsDescription
    </div>
}

<div class="row">
    <div class="col-md-offset-1 col-md-4">
        <form class="form-horizontal">
            <div class="form-group">
                <label asp-for=Reservation.ReserverLastName>Nazwisko osoby rezerwującej:</label>
                <input asp-for=Reservation.ReserverLastName class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for=Reservation.StartDate>Data rozpoczęcia pobytu:</label>
                <input asp-for=Reservation.StartDate type="date" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for=Reservation.EndDate>Data zakończenia pobytu</label>
                <input asp-for=Reservation.EndDate type="date" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for=Reservation.Status>Status zgłoszenia:</label>
                <input asp-for=Reservation.StatusString class="form-control" readonly />
            </div>
            @if (Model.Reservation.Status != SiedliskoCommon.Models.Enums.ReservationStatus.Confirmed)
            {
                <div class="form-group">
                    <a class="btn btn-success form-control" asp-action="Confirm" asp-controller="Reservation" asp-route-id="@Model.Reservation.Id">Potwierdź</a>
                </div>
            }
        </form>
    </div>
    <div class="col-md-offset-1 col-md-4">
        <form class="form-horizontal">
            <div class="form-group">
                <label asp-for=Reservation.TotalCost>Koszt całkowity:</label>
                <input asp-for=Reservation.TotalCost class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for=Reservation.NumberOfAccomodations>Ilość noclegów</label>
                <input asp-for=Reservation.NumberOfAccomodations type="text" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for=Reservation.PeopleQuantity>Ilość osób</label>
                <input asp-for=Reservation.PeopleQuantity class="form-control" readonly />
            </div>
        </form>
    </div>
</div>
<div class="row text-center col-md-offset-4 col-md-4 middleBackBtn">
    <a class="btn btn-primary form-control" asp-action="Index" asp-controller="Reservation">Powrót</a>
</div>