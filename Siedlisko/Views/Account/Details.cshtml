@model Siedlisko.ViewModels.AccountDetailsViewModel

@{
    ViewBag.Title = "User page";
}

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

@if (Model != null && !string.IsNullOrWhiteSpace(Model.ChangeNotification))
{
    <div class="row alert text-center @(Model.ChangesSaved ? "alert-success" : "alert-danger")">
        <span>@Model.ChangeNotification</span>
    </div>
}

<div class="col-md-offset-4 col-md-4">
    <form method="post" asp-action="Update" asp-controller="Account">
        <div class="form-group">
            <label asp-for="Imie"></label>
            <input type="text" asp-for="Imie" class="form-control" />
            <span asp-validation-for="Imie"></span>
        </div>
        <div class="form-group">
            <label asp-for="Nazwisko"></label>
            <input type="text" asp-for="Nazwisko" class="form-control" />
            <span asp-validation-for="Nazwisko"></span>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber"></label>
            <input type="text" asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber"></span>
        </div>
        <input type="hidden" asp-for="Email" />
        <input type="submit" class="btn btn-success form-control" value="Zapisz" />
    </form>
</div>